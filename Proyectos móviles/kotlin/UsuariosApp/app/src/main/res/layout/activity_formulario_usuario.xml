<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.activities.FormularioUsuarioActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_top"

        android:layout_width="match_parent"
        android:layout_height="5dp"
        tools:layout="@layout/fragment_top_form"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/wave"
        android:layout_gravity="center"
        android:layout_below="@id/fragment_top"
        />



    <TextView
        android:id="@+id/titulo_usuarios"
        android:layout_below="@id/waves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dosis"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Usuario"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/formulario_agregar_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo_usuarios"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dosis"

                        >

                        <EditText
                            android:id="@+id/form_u_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:fontFamily="@font/dosis"
                            android:hint="Nombre"
                            android:inputType="text" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dosis"

                        >

                        <EditText
                            android:id="@+id/form_u_correo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:fontFamily="@font/dosis"
                            android:hint="Correo"
                            android:inputType="text" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dosis"

                        >

                        <EditText
                            android:id="@+id/form_u_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:fontFamily="@font/dosis"
                            android:hint="ContraseÃ±a"
                            android:inputType="textVisiblePassword" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <Spinner
                        android:id="@+id/spinner_tipo_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"

                        android:background="@drawable/border_template" />

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dosis"

                        >

                        <EditText
                            android:id="@+id/form_u_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ems="10"
                            android:fontFamily="@font/dosis"
                            android:hint="Fecha"

                            android:inputType="date" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <CheckBox
                        android:id="@+id/form_u_check_activo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/campo_container_telefono"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:text="Activo"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dosis"
                        android:textColor="#5d7bb8" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_metodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_gradient"
        android:elevation="20dp"
        android:fontFamily="@font/dosis"
        android:textSize="20dp"
        android:layout_below="@id/formulario_agregar_usuario"
        android:text="Agregar" />



</RelativeLayout>